{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./server/**/*"
  ],
  "exclude": [
    "./server/**/*.test.ts"
  ]
}
